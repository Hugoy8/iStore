<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.istore.gui.controllers.dashboard.DashboardController">
    <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox fx:id="sidebar" styleClass="sidebar" prefWidth="200" spacing="10">
            <ImageView fx:id="userImage" fitHeight="100" fitWidth="100" />
            <Button text="Utilisateurs" fx:id="btnUsers" onAction="#loadUsersView" styleClass="sidebar-button"/>
            <Button text="Magasins" fx:id="btnStores" onAction="#loadStoresView" styleClass="sidebar-button"/>
            <Button text="Gestion" fx:id="btnManagement" onAction="#loadManagementView" styleClass="sidebar-button"/>
            <Button text="Paramètres" fx:id="btnSettings" onAction="#loadSettingsView" styleClass="sidebar-button"/>
            <VBox VBox.vgrow="ALWAYS" alignment="BOTTOM_CENTER">
                <Label text="Pseudo" fx:id="usernameLabel"/>
                <Button text="Déconnexion" onAction="#handleLogout"/>
            </VBox>
        </VBox>
        <AnchorPane fx:id="contentArea" HBox.hgrow="ALWAYS" />
    </HBox>
</AnchorPane>
