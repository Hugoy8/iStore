<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="824.0" prefWidth="1200.0" stylesheets="@../../styles/dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.istore.gui.controllers.dashboard.StoresViewController">
    <VBox prefHeight="579.0" prefWidth="1057.0" spacing="48.0" style="-fx-padding: 32px;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="-20.0" AnchorPane.topAnchor="0">
        <HBox alignment="CENTER_LEFT" prefHeight="67.0" prefWidth="902.0" spacing="458.0">
            <VBox spacing="4">
                <Text text="Magasins">
                    <font>
                        <Font name="SF Pro Text Bold" size="32.0" />
                    </font></Text>
                <Text text="Gestion des magasins (création, lecture, suppression).  ">
                    <font>
                        <Font name="SF Pro Text Regular" size="20.0" />
                    </font></Text>
            </VBox>
            <Button onAction="#showCreateStore" style="-fx-background-color: #007AFF; -fx-background-radius: 8px; -fx-cursor: pointer;" text="Créer un magasin" textFill="WHITE">
                <padding>
                    <Insets bottom="12.0" left="16.0" right="16.0" top="12.0" />
                </padding>
                <font>
                    <Font name="SF Pro Text Semibold" size="16.0" />
                </font></Button>
        </HBox>
        <TableView fx:id="storesTable" prefHeight="646.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="idColumn" styleClass="columnHeader" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="200.0" styleClass="columnHeader" text="Nom" />
                <TableColumn fx:id="locationColumn" prefWidth="300.0" styleClass="columnHeader" text="Localisation" />
                <TableColumn fx:id="employeesColumn" prefWidth="140.0" styleClass="columnHeader" text="Employés" />
                <TableColumn fx:id="actionsColumn" prefWidth="100.0" styleClass="columnHeader" text="Actions" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
