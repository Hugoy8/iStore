<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.istore.gui.controllers.dashboard.popup.users.DeleteUserConfirmController" style="-fx-padding: 20; -fx-background-color: white;" stylesheets="@../../../../styles/auth.css">
    <Text fill="#000" text="Êtes-vous sûr de vouloir supprimer cet utilisateur ?">
        <font>
            <Font name="SF Pro Text Regular" size="18.0" />
        </font>
    </Text>
    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Confirmer" onAction="#handleConfirm" styleClass="buttonSubmit">
            <font>
                <Font name="SF Pro Display Semibold" size="16.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="cancelButton" text="Annuler" onAction="#handleCancel" styleClass="buttonCancel">
            <font>
                <Font name="SF Pro Display Medium" size="16.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
